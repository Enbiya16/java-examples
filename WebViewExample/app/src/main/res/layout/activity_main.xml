<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:orientation="vertical"
     >
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Açmak istediğiniz web sitesini giriniz"
         android:textSize="40sp"
         android:textStyle="bold"
         ></TextView>

     <TextView
         android:layout_marginTop="50dp"
         android:layout_marginLeft="70dp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Örnek: twitter.com"
         android:textSize="25dp"></TextView>

     <EditText
         android:id="@+id/edituser"
         android:layout_width="400dp"
         android:layout_height="50dp"
         android:hint="www.example.com"></EditText>

     <Button
         android:id="@+id/buttonuser"
         android:layout_width="400dp"
         android:layout_height="50dp"
         android:text="Websiteye Git"
         android:onClick="onClick"></Button>


     <WebView
         android:id="@+id/webpage"
         android:layout_width="400dp"
         android:layout_height="450dp"></WebView>

 </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>